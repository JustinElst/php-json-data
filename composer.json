{
  "name": "remorhaz/php-json-data",
  "description": "JSON Data Accessors",
  "keywords": ["json"],
  "homepage": "https://github.com/remorhaz/php-json-data",
  "license": "MIT",
  "authors": [
    {
      "name": "Edward Surov",
      "email": "zoohie@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3",
    "squizlabs/php_codesniffer": "^3.4",
    "infection/infection": "^0.14.0"
  },
  "autoload": {
    "psr-4": {
      "Remorhaz\\JSON\\Data\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Remorhaz\\JSON\\Test\\Data\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit --coverage-xml=build/log/coverage-xml --log-junit=build/log/phpunit.junit.xml"
    ],
    "infection": [
      "@test",
      "mkdir -p build/log/infection",
      "vendor/bin/infection --threads=4 --coverage=build/log --no-progress"
    ]
  }
}
